@model List<MvcSeyehatSitesi_20._10._2025.Models.Siniflar.Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Blog Listesi</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var x in Model)
    {
        
    <tr>
        <td>@x.ID</td>
        <td>@x.Baslik</td>
        <td><a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-warning">Güncelle</a></td>
        
    </tr>

    }
</table>

<a href="/Admin/YeniBlog" class="btn btn-primary">Yeni Blog</a>

