@model MvcSeyehatSitesi_20._10._2025.Models.Siniflar.BlogYorum
@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<link href="~/web2/css/bootstrap.css" rel='stylesheet' type='text/css' />
<link href="~/web2/css/style.css" rel='stylesheet' type='text/css' />

<style>
    .blogs-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
        width: 100%;
    }
    .single-main {
        width: 100% !important;
        float: none !important;
        margin: 0 !important;
        padding: 0 !important;
    }
    .single-grid {
        width: 100% !important;
    }
</style>

<div class="single">
    <div class="container">
        <div class="blogs-container">
            <div class="single-main">
                
                    @foreach (var blog in Model.Deger1)
                    {
                        <div class="single-grid" style="margin-bottom: 40px; width: 100%; max-width: 100%;">
                            @if (!string.IsNullOrEmpty(blog.BlogImage))
                            {
                                <img src="@blog.BlogImage" alt="@blog.Baslik" style="width: 100%; height: 300px; object-fit: cover; border-radius: 8px;"/>
                                <br /><br />
                            }
                            else
                            {
                                <img src="~/web2/images/post1.jpg" alt="Varsayılan Resim" style="width: 100%; border-radius: 8px;"/>
                                <br /><br />
                            }
                            <h3><a href="@Url.Action("BlogDetay", "Blogs", new { id = blog.ID })" style="text-decoration: none; color: inherit;">@blog.Baslik</a></h3>
                            <p>@(string.IsNullOrEmpty(blog.Aciklama) ? "" : (blog.Aciklama.Length > 500 ? blog.Aciklama.Substring(0, 500) + "..." : blog.Aciklama))</p>
                            <p><small>@blog.Tarih.ToString("dd MMMM yyyy")</small></p>
                            <p><a href="@Url.Action("BlogDetay", "Blogs", new { id = blog.ID })" class="btn btn-primary">Devamını Oku</a></p>
                        </div>
                    }
                
                
                @if (ViewBag.ToplamSayfa > 1)
                {
                    <div style="text-align: center; margin-top: 40px; padding: 20px;">
                        <nav aria-label="Sayfa navigasyonu">
                            <ul style="display: flex; list-style: none; gap: 10px; justify-content: center; flex-wrap: wrap; padding: 0;">
                                
                                
                                @if (ViewBag.SayfaNumarasi > 1)
                                {
                                    <li>
                                        <a href="/Blogs/Index?sayfa=@(ViewBag.SayfaNumarasi - 1)" style="padding: 8px 16px; text-decoration: none; background: #a2365a; color: white; border-radius: 4px; display: inline-block;">
                                            ← Önceki
                                        </a>
                                    </li>
                                }
                                
                               
                                @for (int i = 1; i <= ViewBag.ToplamSayfa; i++)
                                {
                                    @if (i == ViewBag.SayfaNumarasi)
                                    {
                                        <li>
                                            <span style="padding: 8px 16px; background: #a2365a; color: white; border-radius: 4px; font-weight: bold; display: inline-block;">
                                                @i
                                            </span>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a href="/Blogs/Index?sayfa=@i" style="padding: 8px 16px; text-decoration: none; background: #f0f0f0; color: #555; border-radius: 4px; display: inline-block;">
                                                @i
                                            </a>
                                        </li>
                                    }
                                }
                                
                                
                                @if (ViewBag.SayfaNumarasi < ViewBag.ToplamSayfa)
                                {
                                    <li>
                                        <a href="/Blogs/Index?sayfa=@(ViewBag.SayfaNumarasi + 1)" style="padding: 8px 16px; text-decoration: none; background: #a2365a; color: white; border-radius: 4px; display: inline-block;">
                                            Sonraki →
                                        </a>
                                    </li>
                                }
                                
                            </ul>
                        </nav>
                        
                        
                        <p style="margin-top: 15px; color: #555; font-size: 14px;">
                            Sayfa @ViewBag.SayfaNumarasi / @ViewBag.ToplamSayfa 
                        </p>
                    </div>
                }
                
            </div>
        </div>
    </div>
</div>