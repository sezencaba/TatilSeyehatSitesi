@model MvcSeyehatSitesi_20._10._2025.Models.Siniflar.Yorumlar

<style>
    .content-form {
        max-width: 100%;
        margin: 40px 0;
    }
    .content-form h3 {
        margin-bottom: 20px;
        color: #333;
    }
    .content-form form {
        width: 100%;
    }
    .content-form input[type="text"],
    .content-form textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
        box-sizing: border-box;
    }
    .content-form textarea {
        min-height: 120px;
        resize: vertical;
    }
    .content-form input[type="submit"] {
        background: #a2365a;
        color: white;
        padding: 12px 30px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }
    .content-form input[type="submit"]:hover {
        background: #8a2c4a;
    }
</style>

<div class="content-form">
    <h3>Bir Yorum Yapın</h3>
    <form asp-controller="Blogs" asp-action="YorumYap" method="post">
        <input type="hidden" name="BlogID" value="@Model?.BlogID" />
        <input type="text" placeholder="Blog ID" value="@Model?.BlogID" readonly />
        <input type="text" name="KullaniciAdi" placeholder="Kullanıcı Adı" required />
        <input type="text" name="Mail" placeholder="Mail Adresi" required />
        <textarea name="Yorum" placeholder="Yorum" required></textarea>
        <input type="submit" value="GÖNDER" />
    </form>
</div>