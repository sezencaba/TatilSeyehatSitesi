@model List<MvcSeyehatSitesi_20._10._2025.Models.Siniflar.Blog>

<div class="con-bot">
    @{
        var latestBlogs = Model
            .OrderByDescending(b => b.Tarih)
            .Take(3)
            .ToList();

        var leftBlogs = latestBlogs.Take(2).ToList();
        var featuredBlogs = latestBlogs.Skip(2).ToList();
    }

    @foreach (var x in leftBlogs)
    {
        <div class="left equal-card">
            <div class="bot-left">
                <img src="@x.BlogImage" style="width:300px; height:150px" alt="" />
            </div>

            <div class="left-text">
                <h4>@x.Baslik</h4>
                <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
                <p>@(string.IsNullOrEmpty(x.Aciklama) ? "" : (x.Aciklama.Length > 100 ? x.Aciklama.Substring(0, 100) + "..." : x.Aciklama))</p>
                <p><a href="/Blogs/BlogDetay/@x.ID"><span class="read">Devamını Oku</span></a></p>
            </div>
        </div>
    }

    @if (featuredBlogs.Any())
    {
        <div class="right">
            @await Html.PartialAsync("Partial2", featuredBlogs)
        </div>
    }

    <div class="clear"></div>

</div>