@model List<MvcSeyehatSitesi_20._10._2025.Models.Siniflar.Blog>
@foreach (var x in Model)
{
    <div class="equal-card">
        <div class="bot-left">
            <img src="@x.BlogImage" style="width:300px; height:150px" alt="" />
        </div>

        <div class="left-text">
            <h4>@x.Baslik</h4>
            <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@(string.IsNullOrEmpty(x.Aciklama) ? "" : (x.Aciklama.Length > 100 ? x.Aciklama.Substring(0, 100) + "..." : x.Aciklama))</p>
            <p><a href="/Blogs/BlogDetay/@x.ID"><span class="read">Devamını Oku</span></a></p>
        </div>
    </div>
}