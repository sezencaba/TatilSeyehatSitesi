@model List<MvcSeyehatSitesi_20._10._2025.Models.Siniflar.Blog>

<div class="padding1">
    <h4>En Beğendiğim Yerler</h4>
    <div class="box-left">

        @foreach (var x in Model.OrderBy(b => b.ID).Take(3))
        {

            <div class="bot-img">
                <img src="@x.BlogImage" style="width:120px; height:65px" alt="" />
            </div>
            <div class="bot-desc">
                <p>@(string.IsNullOrEmpty(x.Aciklama) ? "" : (x.Aciklama.Length > 70 ? x.Aciklama.Substring(0, 70) + "..." : x.Aciklama))</p>
            </div>
            <div class="clear"></div>
            
        }

    </div>
    @await Html.PartialAsync("Partial5",Model)   
</div>